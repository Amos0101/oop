# Base class
class Book:
    def __init__(self, title, author, pages):
        self.title = title
        self.author = author
        self.pages = pages

    def get_description(self):
        return f"'{self.title}' by {self.author}, {self.pages} pages."

    def read(self):
        return f"You're reading '{self.title}'."

# Subclass
class EBook(Book):
    def __init__(self, title, author, pages, file_size_mb):
        super().__init__(title, author, pages)
        self.file_size_mb = file_size_mb

    def get_description(self):
        return f"'{self.title}' (eBook) by {self.author}, {self.pages} pages, {self.file_size_mb}MB."

    def download(self):
        return f"Downloading '{self.title}' ({self.file_size_mb}MB)..."

# Using the classes
physical_book = Book("1984", "George Orwell", 328)
ebook = EBook("Digital Fortress", "Dan Brown", 356, 2.5)

print(physical_book.get_description())
print(physical_book.read())

print(ebook.get_description())
print(ebook.download())
